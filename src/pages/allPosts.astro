---
import Layout from "../layouts/Layout.astro";
const posts = await Astro.glob("../posts/*.md");
---

<Layout>
  <div class="flex flex-col items-center justify-center bg-[#F5F4EB]">
    <div class="grid items-center grid-cols-1 md:grid-cols-2 md:p-3">
      {
        posts.map((post) => (
          <a
            href={`/${post.frontmatter.slug}`}
            class="flex flex-col-reverse md:flex-row justify-center md:space-x-5 p-5 m-3 shadow-lg bg-[#F5F4EB] rounded-md hover:shadow-lg"
          >
            <div class="flex flex-col py-2 space-y-2">
              <h3 class="font-openSans text-xl font-bold text-[##100E09] hover:underline">
                {post.frontmatter.title}
              </h3>
              <p class="font-openSans text-sm font-bold text-slate-600">
                Written by <strong>{post.frontmatter.author}</strong> on{" "}
                {new Date(post.frontmatter.date).toLocaleDateString()}
              </p>
              <p class="max-w-sm font-openSans text-md text-[#100E09] line-clamp-2">
                {post.frontmatter.excerpt}
              </p>
            </div>
            <div>
              <img
                src={post.frontmatter.thumbnail}
                alt=""
                class="min-h-full overflow-hidden max-h-40"
              />
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
