---
import Layout from "../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await Astro.glob("../posts/*.md");
  return posts.map((post) => ({
    params: {
      slug: post.frontmatter.slug,
    },
    props: {
      post,
    },
  }));
}
const { Content, frontmatter } = Astro.props.post;
---

<Layout>
  <div class="flex flex-col justify-center p-8 space-y-5 md:p-16">
    <h2 class="font-openSans text-3xl font-bold text-[#100E09]">
      {frontmatter.title}
    </h2>
    <div class="font-openSans text-sm font-bold text-slate-600">
      Written by <strong>{frontmatter.author}</strong> on {
        new Date(frontmatter.date).toLocaleDateString()
      }
    </div>
    <div>
      <img
        src={frontmatter.thumbnail}
        alt=""
        class="min-w-full overflow-hidden h-52 md:h-96"
      />
    </div>
    <div class="font-openSans text-xl text-[#100E09] space-y-5 text-justify">
      <Content />
    </div>
  </div>
</Layout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Open+Sans&display=swap");
</style>
